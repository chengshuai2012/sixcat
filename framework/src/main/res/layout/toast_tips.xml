<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/w236"
        android:layout_height="@dimen/h186"
        android:background="@drawable/translucent_black_round_corner"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/mall_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h10"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@mipmap/record_time_too_short"
            />
        
        <TextView 
            android:id="@+id/mall_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h10"
            android:layout_gravity="center"
            android:textSize="@dimen/w28"
            android:textColor="@color/white"
            android:text="时间太短"/>
    </LinearLayout>

</LinearLayout>
