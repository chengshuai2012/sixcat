<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h500"
        android:layout_marginLeft="@dimen/w30"
        android:layout_marginRight="@dimen/w30"
        android:layout_marginTop="@dimen/h61"
        android:background="@drawable/bg_black_rectangle_corner_r20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/w30"
        android:layout_marginTop="@dimen/h38"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="@dimen/w171"
            android:layout_height="@dimen/h62"
            android:layout_marginRight="@dimen/w20"
            android:background="@drawable/border_add_face"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/w35" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="@dimen/w171"
            android:layout_height="@dimen/h62"
            android:layout_marginLeft="@dimen/w20"
            android:background="@drawable/common_button_bg"
            android:gravity="center"
            android:text="@string/_60s"
            android:textColor="@color/white"
            android:textSize="@dimen/w29"
            app:afterText="@string/recent"
            app:ms="60000" />

    </LinearLayout>
</LinearLayout>