<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/w315"
    android:id="@+id/rootLayout"
    android:layout_height="@dimen/h164"
    android:background="@drawable/border_gradient_course_se_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/w30"
    android:paddingTop="@dimen/h30">


    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/w18"
        tools:text="@string/next" />

    <TextView
        android:id="@+id/coachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:textColor="@color/white"
        android:textSize="@dimen/w18"
        tools:text="@string/next" />

    <TextView
        android:id="@+id/classTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:textColor="@color/white"
        android:textSize="@dimen/w18"
        tools:text="@string/next" />

</LinearLayout>