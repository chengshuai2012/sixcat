<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h500"
        android:layout_marginLeft="@dimen/w30"
        android:layout_marginRight="@dimen/w30"
        android:layout_marginTop="@dimen/h61"
        android:background="@drawable/bg_black_rectangle_corner_r20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/w436"
            android:layout_height="@dimen/h250"
            android:layout_marginTop="@dimen/h80"
            android:background="@drawable/border_choose_one_gradient_bg"
            android:orientation="vertical"
            android:padding="@dimen/w30"
            android:paddingLeft="@dimen/w30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w22" />


                <TextView
                    android:id="@+id/userType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w22" />
            </LinearLayout>


            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/w22" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/successLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h101"
        android:layout_marginLeft="@dimen/w50"
        android:layout_marginRight="@dimen/w50"
        android:layout_marginTop="@dimen/h38"
        android:background="@drawable/border_red_gradient_sucess_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/w59"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w50"
            android:text="@string/bind_success"
            android:textColor="@color/white"
            android:textSize="@dimen/w29" />


    </LinearLayout>

</LinearLayout>