<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h500"
        android:layout_marginLeft="@dimen/w30"
        android:layout_marginRight="@dimen/w30"
        android:layout_marginTop="@dimen/h61"
        android:background="@drawable/bg_black_rectangle_corner_r20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h64"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/w186"
                android:layout_height="@dimen/w186"
                android:src="@drawable/ic_finger_one" />

            <ImageView
                android:layout_width="@dimen/w186"
                android:layout_height="@dimen/w186"
                android:layout_marginLeft="@dimen/w29"
                android:src="@drawable/ic_finger_two" />

        </LinearLayout>


        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/custom_progress"
            android:layout_width="@dimen/w1"
            android:layout_height="@dimen/w1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_main"
            android:layout_marginTop="@dimen/margin_main"
            app:progress_background_color="@color/translate"
            app:progress_end_color="@color/red"
            app:progress_start_color="@color/red"
            app:progress_start_degree="-180"
            app:progress_stroke_width="3dp"
            app:style="solid_line" />


        <Button
            android:id="@+id/cardNumber"
            android:layout_width="@dimen/w380"
            android:layout_height="@dimen/h62"
            android:layout_marginTop="@dimen/h58"
            android:background="@drawable/border_add_face"
            android:gravity="center"
            android:text="@string/please_add_finger"
            android:textColor="@color/white"
            android:textSize="@dimen/w28"></Button>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/w30"
        android:layout_marginTop="@dimen/h38"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="@dimen/w171"
            android:layout_height="@dimen/h62"
            android:layout_marginRight="@dimen/w20"
            android:background="@drawable/border_add_face"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/w35" />

        <TextView
            android:id="@+id/nextButton"
            android:layout_width="@dimen/w171"
            android:layout_height="@dimen/h62"
            android:layout_marginLeft="@dimen/w20"
            android:background="@drawable/common_button_bg"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/w29" />
    </LinearLayout>
</LinearLayout>