<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rectangle_corner_r20"
    android:orientation="vertical"
    android:paddingTop="@dimen/h24">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/w48"
        android:layout_marginRight="@dimen/w48"
        android:layout_marginTop="@dimen/h20"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/w32"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="@dimen/w550"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/h24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            style="@style/CommonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/h24"
            android:layout_marginLeft="@dimen/w30"
            android:layout_marginRight="@dimen/w30"
            android:layout_marginTop="@dimen/h24"
            android:gravity="left"
            android:paddingLeft="@dimen/w48"
            android:paddingRight="@dimen/w48"
            android:textSize="@dimen/w28"
            tools:text="" />

        <CheckBox
            android:id="@+id/agree"
            style="@style/CommonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/h10"
            android:layout_marginRight="@dimen/w30"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="@dimen/w4"
            android:text="不再提醒"
            android:textColor="@color/textColorPrimaryGray"
            android:textSize="@dimen/w22"
            android:visibility="gone" />
    </LinearLayout>


    <View
        style="@style/DividerLineHorizontal"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/h96"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancle"
            style="@style/CommonText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/w28"
          />

        <View
            android:id="@+id/divider"
            style="@style/DividerLineVertical"
            android:background="@color/divider_color" />

        <Button
            android:id="@+id/confirm"
            style="@style/CommonText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/w28"
        />
    </LinearLayout>

</LinearLayout>