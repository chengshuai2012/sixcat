<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_index_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sign_face_camera"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.guo.android_extend.widget.CameraSurfaceView
            android:id="@+id/surfaceView"
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <com.guo.android_extend.widget.CameraGLSurfaceView
            android:id="@+id/glsurfaceView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h500"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/h30"
            android:layout_marginLeft="@dimen/w60"
            android:layout_marginRight="@dimen/w60"
            android:background="@drawable/button_bt_white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/introduce_faces"
                android:textColor="#ffffff"
                android:textSize="24dp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>